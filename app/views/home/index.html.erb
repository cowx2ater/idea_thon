<%= render 'top' %>

<div class="container">
  <% @teams.each do |team| %>
    <div class="row" >
      <a href="<%= team.url %>" target="_blank">
        <div class="idea" style="margin-top: 0;">
          <div class="idea-info">
            <div class="idea-img">
              <span class="sample-dot" style='background-image: url(<%= team.image == Team::IMG ? asset_path("lion.jpg") : team.image %>)'></span>
            </div>
            <div class="idea-text">
              <h3><%= team.name %></h3>
              <p><%= team.desc %></p>
            </div>
          </div>
          <div class="vote">
            <span class="red-dot"><%= team.try("cnt") %></span>
          </div>
        </div>
      </a>

    </div>
  <% end %>


</div>
